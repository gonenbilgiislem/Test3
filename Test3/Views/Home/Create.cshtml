@model Test3.Models.Depo

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary(false, "Gerekli Alanları Doldurunuz.!", htmlAttributes: new { @class = "alert alert-danger" })
    <div>
        <form>
            <div class="form-group row">
                <label for="Ad" class="col-sm-2 col-form-label">
                    @Html.LabelFor(model => model.Ad)
                </label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Ad, new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label for="Soyad" class="col-sm-2 col-form-label">
                    @Html.LabelFor(model => model.Soyad)
                </label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Soyad, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Soyad, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div>
                    <input type="submit" value="Submit" class="btn btn-primary" />&nbsp;&nbsp;|&nbsp;&nbsp;
                    <i class="fas fa-undo">
                        &nbsp;
                        @Html.ActionLink("Back to List", "Index")
                    </i>
                </div>
            </div>
        </form>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}